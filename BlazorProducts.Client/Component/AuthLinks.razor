@using Microsoft.AspNetCore.Components.Authorization
<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <MudLink Color="@Color.Default" Href="/Logout" Match="NavLinkMatch.Prefix">Log out</MudLink>
    </Authorized>
    <NotAuthorized>
        <MudLink Color="@Color.Default" Href="/Registration" Match="NavLinkMatch.Prefix">Register </MudLink>
        <MudLink Color="@Color.Default" Href="/Login" Match="NavLinkMatch.Prefix">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>