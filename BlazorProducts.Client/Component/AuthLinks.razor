@using Microsoft.AspNetCore.Components.Authorization
<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <MudPaper Class="pa-4 mr-1 mud-theme-primary">
        <MudLink Style="color: white !important" Href="/Logout" Match="NavLinkMatch.Prefix">Log out</MudLink>
        </MudPaper>
    </Authorized>
    <NotAuthorized>
        <MudPaper Class="pa-4 mr-5 mud-theme-primary">
        <MudLink Style="color: white !important" Href="/Registration" Match="NavLinkMatch.Prefix">Register </MudLink>
        </MudPaper>
        
        <MudPaper Class="pa-4 mr-1 mud-theme-primary">
        <MudLink Style="color: white !important" Href="/Login" Match="NavLinkMatch.Prefix">Log in</MudLink>
        </MudPaper>
    </NotAuthorized>
</AuthorizeView>